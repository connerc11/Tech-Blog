
<form class="new-post-form">
  <h2>Create a New Post</h2>
  <label for="title">Title</label>
  <input type="text" id="post-title" name="post-title"/>
    <label for="post"></label>
    <input type="text" id="post-content" name="post-content"/>
    <button type="submit" class="btn" id="create-new-post"> Create a new post</button>
</form>



{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>